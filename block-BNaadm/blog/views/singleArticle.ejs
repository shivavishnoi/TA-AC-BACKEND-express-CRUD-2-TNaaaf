<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= article.title %></title>
</head>

<body>
  <a href="/articles"><button>Show Articles</button></a>
  <a href="/articles/new"><button>New Articles</button></a>
  <h1><%= article.title %></h1>
  <p>Description - <%= article.description %></p>
  <span>Author: - <%= article.author %></span>
  <div>
    <a href="/articles/<%= article.id %>/delete"><button>Delete Article</button></a>
    <a href="/articles/<%= article.id %>/update"><button>Update Article</button></a>
  </div>
  <hr>
  <br>
  <h3>Comments</h3>
  <form action="/articles/<%= article.id %>/comments" method="POST">
    <textarea name="content" placeholder="write here...." cols="30" rows="10"></textarea>
    <button type="submit">Comment</button>
  </form>
  <br>
  <br>
  <div>
    <% article.comments.forEach((comment)=>{ %>
    <div>

      <h5><%= comment.content %></h5>
      <a href="/comments/<%= comment.id %>/edit">
        <button>Edit</button>
      </a>
      <a href="/comments/<%= comment.id %>/delete">
        <button>Delete</button>
      </a>
    </div>
    <% }) %>
  </div>
</body>

</html>